{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "appearance": {
    "default": "light",
    "strict": true
  },
  "name": "Trails",
  "colors": {
    "primary": "#3A5bff",
    "light": "#D9ECFF",
    "dark": "#15803D"
  },
  "favicon": "/favicon.ico",
  
  "navigation": {
    "global": {
      "anchors": [
        {
          "anchor": "Demo Playground",
          "icon": "square-terminal",
          "href": "https://demo.trails.build/widget"
        }
      ]
    },
    "tabs": [
      {
        "tab": "Home",
        "pages": ["home"]
      },
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Welcome",
            "pages": ["intro", "get-started"]
          },
          {
            "group": "Overview",
            "pages": ["overview/1-click-payments", "overview/chain-abstraction"]
          },
          {
            "group": "Use Cases",
            "pages": [
              "use-cases/pay",
              "use-cases/swap",
              "use-cases/fund",
              "use-cases/earn"
            ]
          },
          {
            "group": "Examples",
            "pages": [
              "examples/receive",
              "examples/alt-fee-tokens",
              "examples/wallet-compatibility",
              "examples/transaction-history",
              "examples/x402"
            ]
          },
          {
            "group": "Architecture",
            "pages": [
              "architecture/how-it-works",
              "architecture/protocol",
              "architecture/pricing-fees"
            ]
          },
          {
            "group": "Resources",
            "pages": ["resources/supported-chains", "resources/llm-integration"]
          }
        ]
      },
      {
        "tab": "SDK",
        "groups": [
          {
            "group": "SDK Documentation",
            "pages": [
              "sdk/get-started",
              "sdk/configuration",
              {
                "group": "Modes",
                "pages": ["sdk/modes/pay", "sdk/modes/fund", "sdk/modes/swap", "sdk/modes/earn"]
              },
              "sdk/theming",
              "sdk/quote-providers",
              "sdk/tokens-and-chains",
              "sdk/hooks"
            ]
          }
        ]
      },
      {
        "tab": "API reference",
        "description": "Trails API Referencing",
        "groups": [
          {
            "group": "API reference",
            "pages": [
              "api-reference/introduction"
            ]
          }
        ]
      }
    ]
  },
  "logo": {
    "light": "/logo/light-mode.svg",
    "dark": "/logo/dark-mode.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "https://t.me/build_with_trails"
      }
    ]
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude"
    ]
  }
}
