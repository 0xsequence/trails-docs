{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "appearance": {
    "default": "light",
    "strict": true
  },
  "name": "Trails",
  "colors": {
    "primary": "#3A5bff",
    "light": "#D9ECFF",
    "dark": "#15803D"
  },
  "favicon": "/favicon.ico",
  
  "navigation": {
    "global": {
      "anchors": [
        {
          "anchor": "Demo Playground",
          "icon": "square-terminal",
          "href": "https://demo.trails.build/widget"
        },
        {
          "anchor": "Trails Status",
          "icon": "heart-pulse",
          "href": "https://status.trails.build"
        }
      ]
    },
    "tabs": [

      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Welcome",
            "pages": ["intro", "get-started"]
          },
          {
            "group": "Use Cases",
            "pages": [
              "use-cases/pay",
              "use-cases/swap",
              "use-cases/fund",
              "use-cases/earn"
            ]
          },
          {
            "group": "Examples",
            "pages": [
              "examples/receive",
              "examples/wallet-compatibility",
              "examples/transaction-history",
              "examples/x402"
            ]
          },
          {
            "group": "Architecture",
            "pages": [
              "architecture/how-it-works",
              "architecture/protocol",
              "architecture/pricing-fees",
              "architecture/alt-fee-tokens",
              "architecture/smart-contracts"
            ]
          },
          {
            "group": "Resources",
            "pages": ["resources/supported-chains", "resources/llm-integration"]
          }
        ]
      },
      {
        "tab": "SDK",
        "groups": [
          {
            "group": "SDK Documentation",
            "pages": [
              "sdk/get-started",
              "sdk/configuration",
              "sdk/hooks",
              {
                "group": "Modes",
                "pages": ["sdk/modes/pay", "sdk/modes/fund", "sdk/modes/swap", "sdk/modes/earn"]
              },
              "sdk/theming",
              "sdk/quote-providers",
              "sdk/tokens-and-chains"
            ]
          }
        ]
      },
      {
        "tab": "API reference",
        "description": "Trails API Referencing",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "api-reference/introduction",
              "api-reference/trails-api-sdk"
            ]
          },
          {
            "group": "Endpoints",
            "pages": [
              "api-reference/endpoints/quote-intent",
              "api-reference/endpoints/commit-intent",
              "api-reference/endpoints/execute-intent",
              "api-reference/endpoints/get-intent-receipt",
              "api-reference/endpoints/wait-intent-receipt",
              "api-reference/endpoints/get-intent",
              "api-reference/endpoints/search-intents",
              "api-reference/endpoints/get-intent-transaction-history",
              "api-reference/endpoints/get-token-prices"
            ]
          }
        ]
      }
    ]
  },
  "logo": {
    "light": "/logo/light-mode.svg",
    "dark": "/logo/dark-mode.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "https://t.me/build_with_trails"
      }
    ]
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude"
    ]
  },
  "seo": {
    "metatags": {
        "canonical": "https://docs.trails.build"
    }
},
  "redirects": [
    {
      "source": "/home",
      "destination": "/intro"
    }
  ]
}
